        </dependency>

        <dependency>
            <groupId>io.nuls.sdk</groupId>
            <artifactId>sdk-all</artifactId>
            <version>1.1.4.6</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
